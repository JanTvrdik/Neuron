{form $form}

<ul n:if="count($formErrors) > 0">
	<li n:foreach="$formErrors as $error">{$error}</li>
</ul>

<table>
	<tr>
		<td>{label username}Uživatelské jméno{/label}</td>
		<td>{input username size => 20}</td>
	</tr><tr>
		<td>{label password}Heslo{/label}</td>
		<td>{input password size => 20}</td>
	</tr>
</table>

<p>{input s value => "Přihlásit se"}</p>

{/form}