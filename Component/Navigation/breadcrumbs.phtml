<div class="control breadcrumbs" n:inner-foreach="$items as $item">
	{if $iterator->isLast()}
		<span class="current">{$item->getLabel()}</span>
	{else}
		{if $item->getUrl() === null}
			<span>{$item->getLabel()}</span>
		{else}
			<a href="{$item->getUrl()}">{$item->getLabel()}</a>
		{/if}
		&rarr;
	{/if}
</div>